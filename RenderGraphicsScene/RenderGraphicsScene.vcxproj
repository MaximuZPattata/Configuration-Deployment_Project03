  <!--********************ConfigAndDeploy Project_03 changes begin here***************************-->
  
  <!--ItemGroup created for specifying the files to be copied-->
  <ItemGroup>
    <SceneDescriptionCopyFile Include="SceneDescription.json" />
    <ModelsCopyFiles Include="Assets\Models\*" />
    <ShadersCopyFiles Include="Assets\Shaders\*" />
    <ExeFile Include=" ..\x64\$(Configuration)\RenderGraphicsScene.exe" />
  </ItemGroup>
  
  <!--PropertyGroup created for specifying the path of the files to be copied-->
  <PropertyGroup>
    <DeploymentPath>$(ProjectDir)Deployment</DeploymentPath>
    <AssetsFolder>$(ProjectDir)Deployment/Assets</AssetsFolder>
    <ModelsFolder>$(DeploymentPath)/Assets/Models</ModelsFolder>
    <ShadersFolder>$(DeploymentPath)/Assets/Shaders</ShadersFolder>
  </PropertyGroup>
  
  <!--PropertyGroup created for specifying the path for zip tool and end result to be stored-->
  <PropertyGroup>
    <ToolPath>$(SolutionDir)ZipTool\</ToolPath>
    <ResultFolderPath>$(SolutionDir)</ResultFolderPath>
  </PropertyGroup>
  
  <!--Target created to copy the files-->
  <Target Name="Checkpoint" AfterTargets="Build" Condition=" '$(Configuration)' == 'Release'">
    <Message Text="||MESSAGE|| Project is built in release mode - Commencing CopyFiles and ZipFiles tasks respectively" Importance="high" />
  </Target>
  
  <!--Target created to execute a message after all the tasks are completed-->
  <Target Name="AfterBuild" DependsOnTargets="Checkpoint" Condition=" '$(Configuration)' == 'Release'">
    <!--Copying the files-->
    <Message Text="||MESSAGE|| Copying executable and dependencies and placing them in a single separate folder" Importance="high" />
    <MakeDir Directories="$(DeploymentPath);$(AssetsFolder);$(ModelsFolder);$(ShadersFolder)" />
    <Copy sourceFiles="@(SceneDescriptionCopyFile)" DestinationFolder="$(DeploymentPath)" />
    <Copy sourceFiles="@(ModelsCopyFiles)" DestinationFolder="$(ModelsFolder)" />
    <Copy sourceFiles="@(ShadersCopyFiles)" DestinationFolder="$(ShadersFolder)" />
    <Copy sourceFiles="@(ExeFile)" DestinationFolder="$(DeploymentPath)" />
    <!--Zipping the files-->
     <Message Text="||MESSAGE|| Zipping the files together" Importance="high" />
    <Exec Command="mkdir &quot;$(ResultFolderPath)&quot;" IgnoreExitCode="true" />
    <Exec Command="&quot;$(ToolPath)7z.exe&quot; a -r &quot;$(ResultFolderPath)project3.zip&quot; &quot;$(DeploymentPath)\*.*&quot;" />
    <!--Final message-->
    <Message Text="||MESSAGE|| 1. Checkpoint ---> Reached | 2. Copying Files ---> Completed | 3. Zipping Files ---> Completed" Importance="high" />
  </Target>
